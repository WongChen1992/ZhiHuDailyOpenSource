<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pixelsstudio.opensource.zhihudailyopensource">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name="com.pixelsstudio.opensource.zhihudailyopensource.app.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ZhiHuDailyOpenSourceAppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".newslist.HomeActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".newsdetails.NewsDetailsActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".helpandfeedback.SettingsActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>